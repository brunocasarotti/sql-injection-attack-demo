@{
    ViewData["Title"] = "Home Page";
}

@model webapp.Models.Customer

<h1 class="display-4">Add Customer</h1>

@using (Html.BeginForm("SaveCustomer", "Home", FormMethod.Post))
{
    <div>Title: </div>
    @Html.TextBoxFor(m => m.Title)

    <div>First Name: </div>
    @Html.TextBoxFor(m => m.FirstName)

    <div>Last Name: </div>
    @Html.TextBoxFor(m => m.LastName)

    <div>Address Line 1: </div>
    @Html.TextBoxFor(m => m.AddressLine1)

    <div>Address Postcode: </div>
    @Html.TextBoxFor(m => m.AddressPostcode)

    <div style="clear:both"></div>

    <input type="submit" value="Save Customer" />
}

<input type="button" value="Cancel" onclick="location.href='@Url.Action("Index", "Home")'" />